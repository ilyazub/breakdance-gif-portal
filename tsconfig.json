{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react-jsxdev",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "strict": true,
    "outDir": "dist",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES2018",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "types/*",
    "*"
  ],
  "paths": {
    "@/*": ["src/*"]
  }
}
